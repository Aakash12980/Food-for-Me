<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/admin_home_user_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/app_logo"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">
                    <TextView
                        android:id="@+id/admin_home_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/admin_home_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today at 9:45 A.M"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready by"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/admin_home_ready_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2:56 P.M"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="OrderId: "
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/admin_home_order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123"
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Total: "
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/admin_home_order_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$213"
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/admin_home_order_item_listview"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/admin_home_order_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="message"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/admin_home_order_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="16dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/admin_home_order_decline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Decline"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>





</LinearLayout>